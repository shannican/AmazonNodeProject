<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Bootstrap demo</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
    <link rel="stylesheet" href="../stylesheets/editprofile.css">
  </head>
  <body>
    <div id="main">
      <a id="logoutbtn" href="/profile"><Button>Profile</Button></a>
        <div id="left">
          <h1>Your Profile</h1>
          <div id="photu">
            <img src="/images/uploads/userImageUpload/<%= data.dpimage %>" alt="">
            <form action="/updateProfile/<%=data._id%>" id="prof" method="post" enctype="multipart/form-data">
              <input name="dpimage" type="file" id="pp-input" >
              <input type="submit" value="submit">
            </form>
          </div>
          <button>Upload New Photo</button>
          <h2><%= data.name %></h2>
          <h3><%= data.proffession %></h3>
          <div class="text">Age :-<h4><%= data.age %></h4></div>
          <div class="text">Birth :-<h4><%= data.birth %></h4></div>
          <div class="text">Mob No. :-<h4>+91<%= data.contact %></h4></div>
          <div class="text">Email :-<h4><%= data.email %></h4></div>
          <div class="text">Address :-<h4><%= data.address %></h4></div>
          <p>Member Since :- <span>01/01/2023</span> </p>
        </div>
        <div id="right">
          <h1>Edit Your Profile</h1><br><br>
          <hr>
          <div id="container">
            <div id="user-info">
              <h4>Change User Info</h4>
              <form id="form" action="/update/<%=data._id%>" method="post">
                <label for="">Name</label>
                <input type="text" name="name" value="<%= data.name %>">

                <label for="">Proffession</label>
                <input type="text" name="proffession" value="<%= data.proffession %>">

                <label for="">Age</label>
                <input type="text" name="age" value="<%= data.age %>">

                <label for="">Date Of Birth</label>
                <input type="text" name="birth" value="<%= data.birth %>">

                <label for="">Mobile Number</label>
                <input type="text" name="contact" value="<%= data.contact %>">
                
                <label for="">Address</label>
                <input type="text" name="address" value="<%= data.address %>">
        
                <input id="submit-btn" type="submit" value="Update">
                <input id="reset-btn" type="reset" value="Reset">
             </form>

            </div>
            <div id="line"></div>
            <div id="change-password">
              <h4>Change Password</h4>
              <form id="form" action="/changepassword" method="post">
                <label for="">Email</label>
                <input type="email" name="email" placeholder="<%= data.email %>">

                <label for="">Old Password</label>
                <input type="password" name="password" placeholder="******">

                <label for="">New Password</label>
                <input type="password" name="newpassword">

                <!-- <label for="">Confirm Password</label>
                <input type="password" name="password">
         -->
                <input id="submit-btn" type="submit" value="Update">
                <input id="reset-btn" type="reset" value="Reset">
             </form>
            </div>
          </div>
        </div>
    </div>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>
    <script src="../javascripts/editprofile.js"></script>
  </body>
</html>